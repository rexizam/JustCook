<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.JustCook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#82B1FF</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">#FFE082</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#81D4FA</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">#80CBC4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- TEXT AUTOCOMPLETE HIGHLIGHT -->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>

    <style name="FullScreen" parent="Theme.JustCook">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="customFAB">
        <item name="android:background">
            @drawable/fab_label_background
        </item>

        <item name="android:textColor">#E0F7FA</item>
    </style>

</resources>